---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>www.kpavan.com/blog</title>
  <link href="http://www.kpavan.com/blog/"/>
  <link type="application/atom+xml" rel="self" href="http://www.kpavan.com/blog/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://www.kpavan.com/blog/</id>
  <author>
    <name>Pavan Kothapalli</name>
    <email>pavan.chow@gmail.com</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>http://www.kpavan.com/blog{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="http://www.kpavan.com/blog{{ post.url }}"/>
    <title>{{ post.title | xml_escape }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>Pavan Kothapalli</name>
      <uri>http://www.kpavan.com/blog/</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>